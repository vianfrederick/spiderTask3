<div class="container">


      <div class="row justify-content-center">


            <% if(AllProducts.length > 0){ %>
              <% AllProducts.forEach(function(product){ %>
          <div class="col-md-4">
            <div class="card shadow" style="width : 20rem;">
              <div class="inner" style="border-bottom: 3px solid green;border-radius: 142px;">
                <img class="card-img-top" src="..\uploads\<%= product.Image %>" alt="Card image cap">
              </div>
              <div class="card-body">
                <h5 class="card-title">Seller-Name : <%= product.Username %></h5>
                <h5 class="card-title">Product-Name : <%= product.ProductName %></h5>
                <h5 class="card-title">Price : <%= product.Price %></h5>
                <h5 class="card-title">Quantity Available : <%= product.Quantity %></h5>
                <p class="card-text">Description : <%= product.Description %></p>
              </div>
              <div style="text-align : center; background: blueviolet;" class="card-footer">
                <form class="" action="/dashboard/myCart/<%= product._id %>" method="post">
                  <label style = "font-size : 21px; color:white;" for="quantity">Quantity</label>
                  <input style = "margin-bottom:  19px;" type="number"  name="quantity" min="1" max="<%= product.Quantity %>" value=1>
                  <% var added = false; %>
                  <% for(var j = 0; j< cart.length ; j++){ %>
                  <% if(cart[j] == product.ProductID){ %>
                    <%  added = true; break; %>

                  <%  } else{ added = false }} %>
                  <% if(added == true){ %>
                    <button  class="btn btn-danger" type="submit" name="button" disabled >Added</button>
                  <% } else{ %>
                    <button  class="btn btn-danger" type="submit" name="button" >Add to Cart</button>
                <%  } %>
                 </form>
              </div>
            </div>
          </div>
        <% }); %>
        <% } %>


