<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/favicon.ico">
    <title>WhiteFalls</title>
  </head>
  <body>

    <section>
      <div class="errors">
        <% errors.forEach(function(err){ %>
          <h4 class = "errorLine"><%= err %></h4>
      <%  }); %>
      <h4 class="emlError"><%= emailError %></h4>
      <h4 class="usrError"><%= userNameError %></h4>
      </div>
      <div style="height:570px;" class="box">
         <div class="form">
           <h2>Register</h2>

           <form action = "/register" method="post">
             <div class="inputBox">
               <input type="text" name="fullName" value="" placeholder="Full Name" required="true">

             </div>
             <div class="inputBox">
               <input type="text" name="username" value="" placeholder="Username" required="true">
               <img src="images/user.png" alt="">
             </div>
             <div class="inputBox">
               <input type="text" name="email" value="" placeholder="Email Address" required="true">

             </div>
             <div class="inputBox">

               <label style="color: white; font-size : 25px;" for="mode">Mode : </label>

               <select style="padding-top:3px; height:33px; font-size : 25px;" class="" name="mode" required="true">
                 <option style="color: white; font-size : 25px;" value="Buyer">Buyer</option>
                 <option style="color: white; font-size : 25px;" value="Seller">Seller</option>
               </select>

             </div>
             <div class="inputBox">
               <input  type="password" name="password" value="" placeholder="Password" required="true">
               <img src="images/lock.png" alt="">
             </div>
             <div class="inputBox">
               <input type="password" name="confirmPassword" value="" placeholder="Confirm Password" required="true">
               <img src="images/lock.png" alt="">
             </div>
             <div class="inputBox">
               <button style="width:90px;" type="submit" name="" value="Register">Register</button>
             </div>
           </form>
             <p>Have an account?  <a href="/login">Login</a></p>
         </div>


      </div>
    </section>
<script type="text/javascript">
  const emlError = document.querySelector(".emlError");
  const usrError = document.querySelector(".usrError");
  const errorLine = document.querySelector(".errorLine")
  if(emlError.innerHTML == ''){
    emlError.style.display = "none";
  }
  if(usrError.innerHTML == ''){
    usrError.style.display = "none";
  }
  if(errorLine.innerHTML != "Passwords do not match"){
    errorLine.style.height = "62px";
    errorLine.style.padding = "2px";
  }
</script>



