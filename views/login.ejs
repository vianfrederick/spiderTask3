<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/favicon.ico">
    <title>WhiteFalls</title>
      </head>
  <body>

    <section>
      <div  class="errors">
        <% if(success_msg != ''){ %>
          <h4 style = "background-color : lightgreen;"><%= success_msg %></h4>
      <%  } %>
      </div>

      <div class="errors">
        <% if(error != ''){ %>
          <h4><%= error %></h4>
      <%  } %>
      </div>

      <div  class="box">
         <div class="form">
           <h2>Login</h2>

           <form action = "/login" method="post">
             <div class="inputBox">
               <input type="text" name="username" value="" placeholder="Username" required="true">
               <img src="images/user.png" alt="">
             </div>
             <div class="inputBox">
               <input type="password" name="password" value="" placeholder="Password" required="true">
               <img src="images/lock.png" alt="">
             </div>

             <div class="inputBox">
               <button type="submit" name="button">Login</button>
             </div>
           </form>


           <p>Need an <a href="/register">account</a></p>
         </div>


      </div>
    </section>




